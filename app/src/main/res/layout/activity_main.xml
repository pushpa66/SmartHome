<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.androidkt.mqtt.MainActivity"
    tools:layout_editor_absoluteY="81dp">


    <ToggleButton
        android:id="@+id/toggleButtonBulb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:text="@string/togglebutton2"
        android:textOff="@string/tbBulb_OFF"
        android:textOn="@string/tbBulb_ON"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewBulb"
        app:layout_constraintEnd_toEndOf="parent" />

    <ToggleButton
        android:id="@+id/toggleButtonDoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/togglebutton1"
        android:textOff="@string/tbDoor_Close"
        android:textOn="@string/tbDoor_Open"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewDoor"
        app:layout_constraintEnd_toEndOf="@+id/toggleButtonBulb" />

    <TextView
        android:id="@+id/textViewBulb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="64dp"
        android:text="@string/textViewBulb"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewDoor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/textViewDoor"
        app:layout_constraintEnd_toEndOf="@+id/textViewBulb"
        app:layout_constraintStart_toStartOf="@+id/textViewBulb"
        app:layout_constraintTop_toBottomOf="@+id/textViewBulb" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:text="@string/btnSettings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>
